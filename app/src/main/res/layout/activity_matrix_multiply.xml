<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bernardo.tccapp.view.MatrixMultiplyActivity">

    <EditText
        android:id="@+id/activity_matrix_multiply_et_matrix_size"
        android:hint="@string/matrix_size_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <Button
        android:id="@+id/activity_matrix_multiply_btn_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_et_matrix_size"
        android:text="@string/calculate" />

    <TextView
        android:id="@+id/activity_matrix_multiply_tv_service_mean_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_btn_calculate"/>

    <TextView
        android:id="@+id/activity_matrix_multiply_tv_average_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_tv_service_mean_time"/>

    <TextView
        android:id="@+id/activity_matrix_multiply_tv_shortest_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_tv_average_time"/>

    <TextView
        android:id="@+id/activity_matrix_multiply_tv_longest_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_tv_shortest_time"/>

    <TextView
        android:id="@+id/activity_matrix_multiply_tv_total_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_matrix_multiply_tv_longest_time"/>

</RelativeLayout>
